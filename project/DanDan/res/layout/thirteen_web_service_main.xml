<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/Province"
            />
        <Spinner 
            android:id="@+id/thirteen_web_service_main_province_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/city"
            />
        <Spinner 
            android:id="@+id/thirteen_web_service_main_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_today_icon_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_today_icon_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<TextView 
		    android:id="@+id/thirteen_web_service_main_today_show_txt"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    />

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_tommorrow_icon_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_tommorrow_icon_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<TextView 
		    android:id="@+id/thirteen_web_service_main_tommorrow_show_txt"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    />

    </LinearLayout>
    
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_afterday_icon_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<ImageView 
		    android:id="@+id/thirteen_web_service_main_afterday_icon_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/Default"/>
		<TextView 
		    android:id="@+id/thirteen_web_service_main_afterday_show_txt"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    />

    </LinearLayout>
    
   <TextView 
       android:id="@+id/thirteen_web_service_main_current_txt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       />
    
</LinearLayout>
