<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <AdapterViewFlipper
        android:id="@+id/two_adapterviewfliper_activity_main_fliper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:flipInterval="5000"
        tools:ignore="NewApi" />
    
    <Button
        android:id="@+id/two_adapterviewfliper_activity_main_prev"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:text="@string/Prev"
        />
    <Button 
        android:id="@+id/two_adapterviewfliper_activity_main_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/Next"
        />
    <Button 
        android:id="@+id/two_adapterviewfliper_activity_main_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
		android:text="@string/AutoPlay"
        />

</RelativeLayout>