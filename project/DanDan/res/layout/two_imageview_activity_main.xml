<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button 
            android:id="@+id/two_imageview_activity_main_increase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Increase"
            />
        <Button
            android:id="@+id/two_imageview_activity_main_decrease_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Decrease"
            />
        <Button
            android:id="@+id/two_imageview_activity_main_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Next"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/two_imageview_activity_main_image1"
        android:layout_width="match_parent"
        android:background="#0000ff"
        android:layout_height="240dp"
        android:src="@drawable/shuangta"
        />
 	<ImageView 
        android:id="@+id/two_imageview_activity_main_image2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#0000ff"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
